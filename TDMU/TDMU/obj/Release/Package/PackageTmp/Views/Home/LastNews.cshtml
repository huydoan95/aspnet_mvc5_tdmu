@model List<Model.EF.News>
@{
    List<Model.EF.News> List = ViewBag.ListNews;
}
<section>
    <div class="section-title">
        <h4><a href="/news" title="Tin tức" style="color:#B1273E;">latest news</a></h4>
    </div>

    <!--news slider-->
    <div class="n-slider flexslider">
        <ul class="slides">
            @foreach (var item in Model)
            {
                var url = "/news/" + item.Url + ".html";
                <li>
                    <div class="news-slider-item">
                            
                        <div class="n-img" style="background-image: url(@item.Image)"></div>
                        <a href="@url">
                            <div class="caption" style="color:white; font-size: 20px; width: 100%; height: auto; background: rgba(1, 1, 1, 0.45); padding:7px;">
                                @item.Name
                            </div>
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
    <!--news slider./-->

    <div class="row news-lst">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <ul class="post-container">
                @for (int i = 0; i < 3; i++)
                {
                    var item = Model[i];
                    var url1 = "/news/" + item.Url + ".html";
                    <li>
                        <div class="post post-sm post-hoz">
                            <div class="post-img">
                                <img src="@item.Image" alt="@item.Name" style="min-height:80px;" />
                            </div>

                            <div class="post-info">
                                 @*<h4><a href="@url1" title="@item.Name" class="post-title">@item.Name</a></h4>*@
								<h4><a href="@url1" title="@item.Name" >@item.Name</a></h4>
                                <div class="post-tag">
                                    <span><i class="fa fa-calendar"></i> @item.Date <i class="fa fa-user"></i> @item.CreateBy </span>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <ul class="post-container">
                @{int count=0;
                for (int i = 3; i < Model.Count; i++)
                {
                if(count < 6){
                var item = Model[i];
                var url2 = "/news/" + item.Url + ".html";
                <li>
                    <div class="post post-sm post-hoz">
                        <div class="post-img">
                            <img src="@item.Image" alt="@item.Name" style="min-height:80px;" />
                        </div>

                        <div class="post-info">
							 @*<h4><a href="@url2" title="@item.Name" class="post-title">@item.Name</a></h4>*@
                            <h4><a href="@url2" title="@item.Name" >@item.Name</a></h4>
                            <div class="post-tag">
                                <span><i class="fa fa-calendar"></i> @item.Date <i class="fa fa-user"></i> @item.CreateBy </span>
                            </div>
                        </div>
                    </div>
                </li>
                }else{
                    break;
                }
                count++;
                }
                }

            </ul>
        </div>

    </div>



</section>
