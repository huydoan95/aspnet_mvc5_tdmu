@model List<Model.EF.News>
<section>
    <div class="section-title">
        <h4><a href="/blog" style="color:#B1273E;">our blog</a></h4>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            var url = "/news/" + item.Url + ".html";
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="post post-md post-hoz ">
                    <div class="post-img">
                        <a href="@url" class="a-img" title="@item.Name">
                            <img alt="@item.Name" src="@item.Image" />
                        </a>
                    </div>
                    <div class="post-info">
                        <h4><a href="@url" title="@item.Name">@item.Name</a></h4>
                        <p class="post-tag">
                            <span><i class="fa fa-clock-o"></i> @item.Date <i class="fa fa-user"></i> @item.CreateBy <i class="fa fa-tags"></i> @item.Keyword</span>
                        </p>
                        <p class="post-desc" style="text-align: justify;">@Html.Raw(@item.Description)</p>

                    </div>
                </div>
            </div>
        }
    </div>
</section>
