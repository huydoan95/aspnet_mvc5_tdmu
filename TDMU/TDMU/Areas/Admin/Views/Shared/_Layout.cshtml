<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->
    <link href="/Content/Admin/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="/Content/Admin/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="/Content/Admin//dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <!-- jQuery 2.1.4 -->
    <script src="/Content/Admin/plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="/" title="logo" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>TDMU</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>TDMU</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="/Content/Admin/dist/img/user2-160x160.jpg" class="user-image" alt="User Image" />
                                <span class="hidden-xs">Quản lý</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="../../dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
                                    <p>
                                        Admin
                                        <small>QL</small>
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!-- Control Sidebar Toggle Button -->

                    </ul>
                </div>
            </nav>
        </header>

        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="/Content/Admin/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p>Quản lý</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">MENU CHÍNH</li>
                    <li class="treeview">
                        <a href="/Admin/News">
                            <i class="fa fa-th"></i> <span>Tin tức</span> <small class="label pull-right bg-green"></small>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Admin/News"><i class="fa fa-circle-o"></i> Quản lý tin tức</a></li>
                            <li><a href="/Admin/News/Create"><i class="fa fa-circle-o"></i> Thêm tin tức mới</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="/Admin/CategoryNews">
                            <i class="fa fa-th"></i> <span>Loại tin tức</span> <small class="label pull-right bg-green"></small>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Admin/CategoryNews"><i class="fa fa-circle-o"></i> Quản lý loại tin tức</a></li>
                            <li><a href="/Admin/CategoryNews/Create"><i class="fa fa-circle-o"></i> Thêm loại tin tức mới</a></li>
                        </ul>
                    </li>
                    @*<li class="treeview">
                            <a href="/Admin/CategoryCourse">
                                <i class="fa fa-share"></i> <span>Loại khoá học</span> <small class="label pull-right bg-green"></small>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="/Admin/CategoryCourse"><i class="fa fa-circle-o"></i> Quản lý loại khóa học</a></li>
                                <li><a href="/Admin/CategoryCourse/Create"><i class="fa fa-circle-o"></i> Thêm loại khóa học mới</a></li>
                            </ul>
                        </li>
                        <li class="treeview">
                            <a href="/Admin/Course">
                                <i class="fa fa-share"></i> <span>Khoá học</span> <small class="label pull-right bg-green"></small>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="/Admin/Course"><i class="fa fa-circle-o"></i> Quản lý khóa học</a></li>
                                <li><a href="/Admin/Course/Create"><i class="fa fa-circle-o"></i> Thêm khóa học mới</a></li>
                            </ul>
                        </li>*@
                    <li class="treeview">
                        <a href="/Admin/Slide">
                            <i class="fa fa-dashboard"></i> <span>Slide</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Admin/Slide"><i class="fa fa-circle-o"></i> Quản lý slide</a></li>
                            <li><a href="/Admin/Slide/Create"><i class="fa fa-circle-o"></i> Thêm slide mới</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="/Admin/Photo">
                            <i class="fa fa-dashboard"></i> <span>Hình ảnh</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Admin/Photo"><i class="fa fa-circle-o"></i> Quản lý hình ảnh</a></li>
                            <li><a href="/Admin/Photo/Create"><i class="fa fa-circle-o"></i> Thêm mới hình ảnh</a></li>
                        </ul>
                    </li>

                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header"></section>

            <!-- Main content -->
            <section class="content">

                @RenderBody()

            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.2.0
            </div>
            <strong>Copyright &copy; 2014-2015 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights reserved.
        </footer>


        <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->
    <!-- Bootstrap 3.3.2 JS -->
    <script src="/Content/Admin/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="/Content/Admin/plugins/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Content/Admin/plugins/datatables/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="/Content/Admin/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src="/Content/Admin/plugins/fastclick/fastclick.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="/Content/Admin/dist/js/app.min.js" type="text/javascript"></script>
    <script src="/Content/Admin/js/jQuery.print.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/Content/Admin/dist/js/demo.js" type="text/javascript"></script>
    <script src="/Content/Admin/ckfinder/ckfinder.js"></script>
    <script src="/Content/Admin/ckeditor/ckeditor.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>
